{% extends 'base.html.twig' %}

{% block title %}Authorization Consent{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Authorization Request</h4>
                </div>
                <div class="card-body">
                    <p>Application <strong>{{ client_id }}</strong> wants to access your account.</p>
                    
                    <h5>Requested Permissions:</h5>
                    <ul>
                        {% for scope in scopes %}
                            <li>{{ scope }}</li>
                        {% endfor %}
                    </ul>

                    <div class="d-flex gap-2">
                        <form action="{{ path('oauth2_consent_approve') }}" method="get">
                            <input type="hidden" name="client_id" value="{{ client_id }}">
                            <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                            <input type="hidden" name="response_type" value="{{ response_type }}">
                            <input type="hidden" name="scopes" value="{{ scopes }}">
                            <input type="hidden" name="state" value="{{ state }}">
                            <input type="hidden" name="grant_type" value="{{ grant_type }}">
                            
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form action="{{ path('oauth2_consent_deny') }}" method="get">
                            <input type="hidden" name="client_id" value="{{ client_id }}">
                            <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                            <input type="hidden" name="response_type" value="{{ response_type }}">
                            <input type="hidden" name="scopes" value="{{ scopes }}">
                            <input type="hidden" name="state" value="{{ state }}">
                            <input type="hidden" name="grant_type" value="{{ grant_type }}">
                            
                            <button type="submit" class="btn btn-danger">Deny</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}