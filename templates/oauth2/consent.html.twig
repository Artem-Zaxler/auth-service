{% extends 'admin/auth/auth_base.html.twig' %}
{% block title %}Запрос авторизации{% endblock %}
{% block content %}
<div class="card border-0 shadow-sm">
    <div class="card-body p-5 rounded-4">
        <div class="text-center mb-4">
            <h4 class="fw-light mb-3">Запрос авторизации</h4>
            <p class="text-muted small">
                Приложение <strong class="text-primary">{{ client_id }}</strong> запрашивает доступ к вашему аккаунту.
            </p>
        </div>

        <div class="mb-4">
            <h6 class="fw-light mb-3">Запрашиваемые разрешения:</h6>
            <div class="d-flex flex-column gap-2">
                {% for scope_item in scope|split(' ') %}
                    <div class="d-flex align-items-center">
                        <i class="fas fa-circle-check text-primary me-2 small"></i>
                        <span class="text-muted">{{ scope_item }}</span>
                    </div>
                {% else %}
                    <div class="d-flex align-items-center">
                        <i class="fas fa-circle-check text-primary me-2 small"></i>
                        <span class="text-muted">{{ scope }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <form action="{{ path('oauth2_consent_approve') }}" method="get" class="flex-fill">
                <input type="hidden" name="client_id" value="{{ client_id }}">
                <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                <input type="hidden" name="response_type" value="{{ response_type }}">
                <input type="hidden" name="scope" value="{{ scope }}">
                <input type="hidden" name="state" value="{{ state }}">
                <input type="hidden" name="grant_type" value="{{ grant_type }}">

                <button type="submit" class="btn btn-outline-primary w-100 py-2 rounded-3">
                    <i class="fas fa-check-circle me-2"></i>
                    Разрешить
                </button>
            </form>

            <form action="{{ path('oauth2_consent_deny') }}" method="get" class="flex-fill">
                <input type="hidden" name="client_id" value="{{ client_id }}">
                <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                <input type="hidden" name="response_type" value="{{ response_type }}">
                <input type="hidden" name="scope" value="{{ scope }}">
                <input type="hidden" name="state" value="{{ state }}">
                <input type="hidden" name="grant_type" value="{{ grant_type }}">

                <button type="submit" class="btn btn-outline-danger w-100 py-2 rounded-3">
                    <i class="fas fa-times-circle me-2"></i>
                    Отклонить
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
