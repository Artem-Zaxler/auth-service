{% extends 'admin/base.html.twig' %}

{% block title %}Просмотр пользователя - {{ user.username }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Просмотр пользователя: {{ user.username }}</h1>
                <div>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>
                        Редактировать
                    </a>
                    <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Назад к списку
                    </a>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Основная информация</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tr>
                                    <th>ID</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Имя пользователя</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Роли</th>
                                    <td>
                                        {% for role in user.roles %}
                                            <span class="badge bg-info">{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Статус</th>
                                    <td>
                                        {% if user.isBlocked %}
                                            <span class="badge bg-danger">Заблокирован</span>
                                        {% else %}
                                            <span class="badge bg-success">Активен</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Дата создания</th>
                                    <td>{{ user.createdAt|date('d.m.Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Последнее обновление</th>
                                    <td>{{ user.updatedAt|date('d.m.Y H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}