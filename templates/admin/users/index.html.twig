{% extends 'admin/base.html.twig' %}

{% block title %}Список пользователей{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Список пользователей</h1>
                <a href="{{ path('admin_users_create') }}" class="btn btn-primary">
                    <i class="fas fa-user-plus me-1"></i>
                    Создать пользователя
                </a>
            </div>
            
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Страница {{ page }} из {{ totalPages }}, 
                        Показано {{ users|length }} из {{ total }} пользователей
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Имя пользователя</th>
                                    <th>Email</th>
                                    <th>Роли</th>
                                    <th>Статус</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            {% for role in user.roles %}
                                                <span class="badge bg-info">{{ role }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if user.isBlocked %}
                                                <span class="badge bg-danger">Заблокирован</span>
                                            {% else %}
                                                <span class="badge bg-success">Активен</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ user.createdAt|date('d.m.Y H:i') }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('admin_users_view', {'id': user.id}) }}" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Пользователи не найдены</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {% if totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_users_index', {'page': page - 1, 'limit': limit}) }}">
                                    Предыдущая
                                </a>
                            </li>
                            
                            {% for i in 1..totalPages %}
                                <li class="page-item {{ page == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('admin_users_index', {'page': i, 'limit': limit}) }}">
                                        {{ i }}
                                    </a>
                                </li>
                            {% endfor %}
                            
                            <li class="page-item {{ page >= totalPages ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_users_index', {'page': page + 1, 'limit': limit}) }}">
                                    Следующая
                                </a>
                            </li>
                        </ul>
                    </nav>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}