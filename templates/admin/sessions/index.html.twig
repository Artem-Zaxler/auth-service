{% extends 'admin/base.html.twig' %}
{% block title %}Список сессий пользователя{% endblock %}
{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Список сессий пользователя</h1>
                <a href="{{ path('admin_users_view', {'id': userId}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Назад к пользователю
                </a>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Страница {{ page }} из {{ totalPages }}, Показано {{ sessions|length }} из {{ total }} сессий
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Начало сессии</th>
                                    <th>Завершение сессии</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for session in sessions %}
                                    <tr>
                                        <td>{{ session.id }}</td>
                                        <td>{{ session.startedAt|date('d.m.Y H:i:s') }}</td>
                                        <td>
                                            {% if session.finishedAt %}
                                                {{ session.finishedAt|date('d.m.Y H:i:s') }}
                                            {% else %}
                                                <span class="badge bg-success">Активна</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if session.finishedAt %}
                                                <span class="badge bg-secondary">Завершена</span>
                                            {% else %}
                                                <span class="badge bg-success">Активна</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_sessions_view', {'id': session.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> Просмотр
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Сессии не найдены</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_user_sessions_index', {'userId': userId, 'page': page - 1, 'limit': limit}) }}">
                                    Предыдущая
                                </a>
                            </li>
                            {% for i in 1..totalPages %}
                                <li class="page-item {{ page == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('admin_user_sessions_index', {'userId': userId, 'page': i, 'limit': limit}) }}">
                                        {{ i }}
                                    </a>
                                </li>
                            {% endfor %}
                            <li class="page-item {{ page >= totalPages ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_user_sessions_index', {'userId': userId, 'page': page + 1, 'limit': limit}) }}">
                                    Следующая
                                </a>
                            </li>
                        </ul>
                    </nav>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}