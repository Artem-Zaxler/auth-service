{% extends 'admin/base.html.twig' %}
{% block title %}Просмотр сессии{% endblock %}
{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Просмотр сессии #{{ session.id }}</h1>
                <a href="{{ path('admin_user_sessions_index', {'userId': session.userEntity.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Назад к списку сессий
                </a>
            </div>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Информация о сессии</h6>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>ID</th>
                            <td>{{ session.id }}</td>
                        </tr>
                        <tr>
                            <th>Пользователь</th>
                            <td>
                                <a href="{{ path('admin_users_view', {'id': session.userEntity.id}) }}">
                                    {{ session.userEntity.username }} (ID: {{ session.userEntity.id }})
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Начало сессии</th>
                            <td>{{ session.startedAt|date('d.m.Y H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Завершение сессии</th>
                            <td>
                                {% if session.finishedAt %}
                                    {{ session.finishedAt|date('d.m.Y H:i:s') }}
                                {% else %}
                                    <span class="badge bg-success">Активна</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Статус</th>
                            <td>
                                {% if session.finishedAt %}
                                    <span class="badge bg-secondary">Завершена</span>
                                {% else %}
                                    <span class="badge bg-success">Активна</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Длительность</th>
                            <td>
                                {% if session.finishedAt %}
                                    {{ session.finishedAt.diff(session.startedAt)|date('%H:%I:%S') }}
                                {% else %}
                                    {{ 'now'|date('U') - session.startedAt|date('U') }} секунд (активна)
                                {% endif %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}